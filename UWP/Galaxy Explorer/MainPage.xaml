<Page
    x:Class="GalaxyExplorer.MainPage"
    IsTabStop="false"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GalaxyExplorer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#FFFFFF">

    <SwapChainPanel x:Name="DXSwapChainPanel">
        <Grid x:Name="ExtendedSplashGrid" Background="#FFFFFF">
            <Image x:Name="ExtendedSplashImage" Source="Assets/SplashScreen.png" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        </Grid>
    </SwapChainPanel>
    <Page.BottomAppBar>
        <CommandBar ClosedDisplayMode="Minimal" RequestedTheme="Dark">
            <AppBarButton x:Uid="MapPageAppBarLegend" Label="About" Icon="Globe"
                          x:Name="AppBarButton_About"/>
            <AppBarButton x:Uid="MapPageAppBarLegend" Label="Reset" Icon="Refresh"
                          x:Name="AppBarButton_Reset"/>
        </CommandBar>
    </Page.BottomAppBar>
</Page>